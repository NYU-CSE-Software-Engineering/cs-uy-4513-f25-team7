<!DOCTYPE html>
<html>
  <head>
    <title>CsUy4513F25Team7</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" rescue nil %>
    <%= stylesheet_link_tag "forum", "data-turbo-track": "reload" rescue nil %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header>
      <nav>
        <%= link_to "Home", root_path %>
        <% if user_signed_in? %>
          | <%= link_to "Account Settings", edit_user_registration_path %>
          | <%= button_to "Log out", destroy_user_session_path, method: :delete, form: { style: "display:inline" } %>
        <% else %>
          | <%= link_to "Login", new_user_session_path %>
          | <%= link_to "Register", new_user_registration_path %>
        <% end %>
      </nav>
    </header>

    <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
    <% end %>

    <%= yield %>
  </body>
</html>
