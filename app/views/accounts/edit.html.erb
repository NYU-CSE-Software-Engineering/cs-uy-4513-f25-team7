<h1>Account Settings</h1>

<% if user_signed_in? %>
  <p>Signed in as <%= current_user.email %></p>

  <% if current_user.otp_enabled %>
    <p>Two-factor authentication: <strong>Enabled</strong></p>
  <% else %>
    <p>Two-factor authentication: <strong>Disabled</strong></p>
    <%= button_to "Enable 2FA", new_two_factor_path, method: :get %>
  <% end %>
<% else %>
  <p>Please log in.</p>
<% end %>
