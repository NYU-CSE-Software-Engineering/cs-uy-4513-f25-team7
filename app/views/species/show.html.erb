<div data-test="species-page">
  <h2><%= @name %></h2>

  <div data-test="follower-count">
    Followers: <span><%= @follower_count %></span>
  </div>

  <div>
    <% if @following %>
      <%= button_to "Unfollow",
                    species_follow_path(name: @name),
                    method: :delete,
                    "data-test": "follow-button" %>
    <% else %>
      <%= button_to "Follow",
                    species_follow_path(name: @name),
                    method: :post,
                    "data-test": "follow-button" %>
    <% end %>
  </div>
</div>
