<%# app/views/reviews/_form.html.erb %>
<div class="review-form">
  <h3>Write a Review</h3>
  <%= form_with model: [team, review], local: true, data: { turbo: false } do |f| %>
    <div class="field">
      <label>Rating (1-5 stars):</label>
      <div class="star-rating-input">
        <% (1..5).each do |star| %>
          <%= f.radio_button :rating, star, id: "rating_#{star}" %>
          <label for="rating_<%= star %>" class="star-label"><%= "★" * star %><%= "☆" * (5 - star) %></label>
        <% end %>
      </div>
    </div>

    <div class="field">
      <%= f.label :body, "Review (optional, max 500 characters)" %>
      <%= f.text_area :body, rows: 4, maxlength: 500, placeholder: "Share your thoughts about this team..." %>
    </div>

    <div class="actions">
      <%= f.submit "Submit Review", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

