<div class="forum-container">
  <div class="forum-header">
    <h1>üìù New Post</h1>
  </div>
  <p class="text-muted" style="margin-bottom: 2rem;">Share your thoughts with the community</p>

  <div class="card">
    <%= form_with(model: @post, local: true, id: "new_post") do |form| %>
      <% if @post.errors.any? %>
        <div class="flash alert" style="margin-bottom: 1.5rem;">
          <strong><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</strong>
          <ul style="margin: 0.5rem 0 0 1.5rem;">
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :title, "Title" %>
        <%= form.text_field :title, placeholder: "Give your post a descriptive title", class: 'form-input' %>
      </div>

      <div class="form-group">
        <%= form.label :post_type, "Post Type" %>
        <%= form.select :post_type, [
          ['üí¨ Thread - General Discussion', 'Thread'],
          ['üìä Meta - Site/Community Discussion', 'Meta'],
          ['‚öîÔ∏è Strategy - Competitive Tips', 'Strategy'],
          ['üì¢ Announcement - Important News', 'Announcement']
        ], {}, { class: 'form-select' } %>
      </div>

      <div class="form-group">
        <%= form.label :body, "Body" %>
        <%= form.text_area :body, rows: 10, placeholder: "Write your post here...", class: 'form-textarea' %>
      </div>

      <div class="form-group">
        <%= form.label :tag_names, "Tags (comma-separated)" %>
        <%= form.text_field :tag_names, placeholder: "e.g., ruby, rails, database", class: 'form-input' %>
        <small class="form-help" style="display: block; margin-top: 0.5rem; color: var(--text-muted); font-size: 0.85rem;">
          Separate multiple tags with commas. Tags help others find your post.
        </small>
      </div>

      <div class="form-actions" style="margin-top: 1.5rem; display: flex; gap: 0.75rem; flex-wrap: wrap;">
        <%= form.submit 'Create Post', class: 'btn btn-primary' %>
        <%= link_to 'Cancel', posts_path, class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
