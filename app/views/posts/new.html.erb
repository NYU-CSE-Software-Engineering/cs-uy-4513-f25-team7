<div style="max-width: 700px; margin: 0 auto;">
  <h1>üìù New Post</h1>
  <p class="text-muted" style="margin-bottom: 2rem;">Share your thoughts with the community</p>

  <div class="card">
    <%= form_with(model: @post, local: true, id: "new_post") do |form| %>
      <% if @post.errors.any? %>
        <div class="flash alert" style="margin-bottom: 1.5rem;">
          <strong><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</strong>
          <ul style="margin: 0.5rem 0 0 1.5rem;">
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :title, "Title" %>
        <%= form.text_field :title, placeholder: "Give your post a descriptive title" %>
      </div>

      <div class="form-group">
        <%= form.label :post_type, "Post Type" %>
        <%= form.select :post_type, [
          ['üí¨ Thread - General Discussion', 'Thread'],
          ['üìä Meta - Site/Community Discussion', 'Meta'],
          ['‚öîÔ∏è Strategy - Competitive Tips', 'Strategy'],
          ['üì¢ Announcement - Important News', 'Announcement']
        ] %>
      </div>

      <div class="form-group">
        <%= form.label :body, "Body" %>
        <%= form.text_area :body, rows: 10, placeholder: "Write your post here..." %>
      </div>

      <div class="form-group">
        <%= form.label :tag_names, "Tags (comma-separated)" %>
        <%= form.text_field :tag_names, placeholder: "e.g., ruby, rails, database" %>
      </div>

      <div class="flex gap-2" style="margin-top: 1.5rem;">
        <%= form.submit 'Create Post', class: 'btn btn-primary' %>
        <%= link_to 'Cancel', posts_path, class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
