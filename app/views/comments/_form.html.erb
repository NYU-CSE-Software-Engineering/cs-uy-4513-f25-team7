<%= form_with(model: [post, comment], local: true, id: "new_comment") do |form| %>
  <% if comment.errors.any? %>
    <div class="flash alert" style="margin-bottom: 1rem;">
      <% comment.errors.full_messages.each do |message| %>
        <p style="margin: 0;"><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :body, "Add a comment", style: "display: block; margin-bottom: 0.5rem;" %>
    <%= form.text_area :body, rows: 3, placeholder: "Share your thoughts..." %>
  </div>

  <%= form.submit 'Post Comment', class: 'btn btn-primary' %>
<% end %>
