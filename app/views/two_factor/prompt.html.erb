<h1>Two-Factor Verification</h1>

<% if flash[:alert].present? %>
  <p class="alert"><%= flash[:alert] %></p>
<% end %>

<p>Enter authentication code</p>

<%= form_with url: two_factor_verify_path, method: :post, data: { turbo: false } do %>
  <div>
    <%= label_tag :code, "Authentication code" %><br>
    <%= text_field_tag :code %>
  </div>

  <!-- Make the submit a real <button>, so Capybara's click_button can find it -->
  <button type="submit">Submit</button>
<% end %>
