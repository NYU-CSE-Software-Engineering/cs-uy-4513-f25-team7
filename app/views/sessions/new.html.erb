<div style="max-width: 420px; margin: 3rem auto;">
  <div class="card">
    <div class="text-center" style="margin-bottom: 2rem;">
      <h1 style="font-size: 2rem;">Welcome Back</h1>
      <p class="text-muted">Sign in to continue your journey</p>
    </div>

    <%= form_with url: user_session_path, method: :post do |f| %>
      <div class="form-group">
        <%= label_tag :email, "Email" %>
        <%= text_field_tag :email, nil, placeholder: "trainer@pokemon.com" %>
      </div>

      <div class="form-group">
        <%= label_tag :password, "Password" %>
        <%= password_field_tag :password, nil, placeholder: "••••••••" %>
      </div>

      <div style="margin-top: 1.5rem;">
        <%= submit_tag "Sign In", class: "btn btn-primary", style: "width: 100%;" %>
      </div>

      <div style="margin-top: 1.5rem; text-align: center;">
        <span class="text-muted">or</span>
      </div>

      <div style="margin-top: 1.5rem;">
        <%= link_to "/auth/google_oauth2", id: "google-login-link", data: { turbo: false }, class: "btn btn-secondary", style: "width: 100%; display: flex;" do %>
          <svg width="18" height="18" viewBox="0 0 24 24" style="margin-right: 0.5rem;">
            <path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          Continue with Google
        <% end %>
      </div>
    <% end %>

    <div style="margin-top: 2rem; text-align: center; padding-top: 1.5rem; border-top: 1px solid var(--border-color);">
      <span class="text-muted">Don't have an account?</span>
      <%= link_to "Sign up", new_user_registration_path %>
    </div>
  </div>
</div>
